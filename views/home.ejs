<%- include('partials/header') %>

    <h1>Home</h1>
    <p>
        <%= homeStartingContent %>
    </p>

    <% posts.forEach(post=> { %>
        <div class="container posts">
            <h3>
                <%= post.title %>
            </h3>
            <span>
                <%= post.date %>
            </span>
            <p>
                <%= post.text.substring(0, 100) + "..." %>
                    <a href="/posts/<%= post._id %>">Read More ></a>
            </p>
        </div>
        <% });%>

            <%- include('partials/footer') %>